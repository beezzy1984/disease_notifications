<?xml version="1.0" encoding="utf-8"?>
<form string="Sample detail" col="4">
    <group id="group_specimen" col="6" colspan="4">
        <label name="specimen_type" />
        <field name="specimen_type" width="80" />
        <label name="date_taken" />
        <field name="date_taken" />
        <label name="name" />
        <field name="name" width="80" />
    </group>
<!--     <newline />
    <label name="lab_request" />
    <field name="lab_request"  colspan="3" /> -->
    <newline />
    <group id="group_lab_init" col="4" colspan="4">
        <label name="lab_sent_to" />
        <field name="lab_sent_to" />
        <label name="lab_test_type" />
        <field name="lab_test_type" width="40" />
    </group>
    <newline />
    <group id="group_results" string="Lab Test Result" colspan="4" col="4">
        <label name="date_tested" />
        <field name="date_tested" />
        <label name="lab_result_state" />
        <field name="lab_result_state" />
        <label name="lab_result_type" />
        <field name="lab_result_type" widget="selection" />
        <newline />
        <separator name="lab_result" colspan="4" />
        <newline />
        <field name="lab_result" colspan="4"/>
    </group>
    <newline />
    <label name="notification" />
    <field name="notification" colspan="3" />
</form>