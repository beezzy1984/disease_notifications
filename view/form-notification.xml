<?xml version="1.0" encoding="utf-8"?>
<form string="Disease Notification" col="6">

    <group id="group_header">
        <group id="group_patient_header" string="Patient" col="8" colspan="4">
            <field name="patient" colspan="3" />
            <label string="UPI/MRN/Age/Sex/" id="lbl_patient_identifiers" />
            <field name="upi" />
            <field name="mrn" />
            <field name="age" />
            <field name="sex" />
        </group>
        <group id="group_notification_header" string="Notification" colspan="2" col="4">
            <field name="date_reported" />
            <label name="status" />
            <field name="status" />
            <field name="name" />
        </group>
    </group>
    <newline />
    <group id="group_disease" col="6">
        <label name="diagnosis" />
        <field name="diagnosis" colspan="3" />
        <label name="date_onset" />
        <field name="date_onset" />
        <newline />
        <field name="symptoms" colspan="6" />
    </group>
    <newline />
    <group id="group_checks" colspan="6" col="12">
        <label name="specimen_taken" />
        <field name="specimen_taken" />
        <label name="hx_travel" />
        <field name="hx_travel" />
        <label name="hospitalized" />
        <field name="hospitalized" />
        <label name="deceased" />
        <field name="deceased" />
    </group>
    <group id="group_hospital_death">
        <label name="hospital" />
        <field name="hospital" />
        <label name="admission_date" />
        <field name="admission_date" />
        <label name="ward" />
        <field name="ward" />
        <label name="date_of_death" />
        <field name="date_of_death" />
    </group>
    <group id="group_one2manies">
        <field name="specimens" colspan="6" />
        <field name="hx_locations" colspan="6" />
    </group>

</form>